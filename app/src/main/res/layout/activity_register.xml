<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"

    android:background="@drawable/butt"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/shield3"
            android:backgroundTint="#c4b90909"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="REJOINEZ-NOUS !"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/nom_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#3e3e3e"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:textColor="@color/colorText" />




        <EditText
            android:id="@+id/prenom_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:hint="Prenom"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#3e3e3e" />



        <EditText
            android:id="@+id/email_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#3e3e3e"
            android:hint="Adresse email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorText" />


        <EditText
            android:id="@+id/tel_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numéro de téléphone"
            android:inputType="phone"
            android:textColor="@color/colorText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#3e3e3e" />


        <Spinner
            android:id="@+id/region_Text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Région"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#bc0000"
            android:textColor="#6d6d6d"


            />


        <Spinner
            android:id="@+id/grpsanguin_Text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#d21c1c"
            android:hint="Groupe sanguin"
            android:inputType="textPersonName"
            android:textColor="#6d6d6d" />

        <EditText
            android:id="@+id/age_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Âge"
            android:inputType="textPersonName"
            android:textColor="@color/colorText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#3e3e3e"
            />

        <EditText
            android:id="@+id/datedonation_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dernier date de donation"
            android:inputType="textPersonName"
            android:textColor="@color/colorText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#3e3e3e"
            />

        <EditText
            android:id="@+id/password_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#3e3e3e"
            />

        <EditText
            android:id="@+id/Cpassword_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:backgroundTint="#3e3e3e"
            />


        <ProgressBar
            android:id="@+id/progress"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/inscrire_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/withoutcorners"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="1dp"
            android:text="S'inscrire" />


    </LinearLayout>

</ScrollView>