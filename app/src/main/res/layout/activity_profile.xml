<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/butt">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:src="@drawable/ic_account_circle_black_24dp"
        />

    <Button
        android:id="@+id/btn_photo"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:text="Changer photo"
        android:textStyle="bold"/>




            <LinearLayout
                android:id="@+id/layout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_photo"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:backgroundTint="#3affffff"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_text"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <EditText
                    android:id="@+id/prename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="prename"
                    android:inputType="textPersonName" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_text2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="Email"
                    android:inputType="textPersonName" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_text3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="age"
                    android:inputType="textPersonName" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_text4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <EditText
                    android:id="@+id/tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="tel"
                    android:inputType="textPersonName" />


            </LinearLayout>





        <io.ghyeok.stickyswitch.widget.StickySwitch
            android:id="@+id/stickySwitch"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="130dp"
            app:ss_iconPadding="9dp"
            app:ss_iconSize="30dp"
            app:ss_leftIcon="@drawable/anon"
            app:ss_leftText="Anonyme"
            app:ss_rightIcon="@drawable/head"
            app:ss_rightText="Connue"
            app:ss_selectedTextSize="14sp"
            app:ss_sliderBackgroundColor="#8caa0006"
            app:ss_switchColor="#47737373"
            app:ss_textColor="#200"
            app:ss_textSize="12sp" />





        <TextView
            android:id="@+id/id"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="300dp"
            android:text="id"
            android:textStyle="bold"/>
    <TextView

        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="300dp"
        android:text="Points: "
        android:textStyle="bold"/>

    <Button
        android:id="@+id/activity"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="445dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="60dp"
        android:text="historique d'activitÃ©"
        android:background="@drawable/backgroundfile"
        android:backgroundTint="#52c10000"
        />

        <ImageView
            android:id="@+id/rank"
            android:layout_width="98dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id"
            android:layout_alignEnd="@+id/id"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="-29dp"
            app:srcCompat="@drawable/points" />

        <ImageView
            android:id="@+id/btnlogout"
            android:layout_width="35dp"
            android:layout_height="31dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="300dp"
            app:srcCompat="@drawable/logout" />









        <android.support.design.widget.BottomNavigationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="515dp"
            android:id="@+id/bottomNavView_Bar"
            android:background="@android:color/darker_gray"
            app:menu="@menu/bottom_navigation_menu">


        </android.support.design.widget.BottomNavigationView>




</RelativeLayout>














